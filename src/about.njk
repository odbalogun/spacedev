<!-- Team member modal -->
<div id="team-modal" class="team-modal fixed inset-0 z-50 hidden" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="team-modal-title">
<div class="team-modal-backdrop absolute inset-0 bg-black/70 backdrop-blur-sm" data-close-modal></div>
<div class="team-modal-box relative z-10 w-full mx-4 max-h-[90vh] overflow-y-auto bg-background-dark border border-white/10 rounded-2xl shadow-2xl flex flex-col md:flex-row">
<button type="button" class="team-modal-close absolute top-4 right-4 z-20 w-10 h-10 flex items-center justify-center rounded-full bg-white/10 hover:bg-white/20 text-white transition-colors" aria-label="Close modal" data-close-modal>
<span class="material-symbols-outlined">close</span>
</button>
{% for member in site.team %}
<div class="team-modal-panel hidden w-full p-8 md:p-10 lg:p-12 flex flex-col md:flex-row gap-8 md:gap-10" data-member-index="{{ loop.index0 }}">
<div class="md:min-w-[260px] lg:min-w-[300px] flex-shrink-0 mb-2 md:mb-0">
<img class="w-40 h-40 md:w-56 md:h-56 lg:w-64 lg:h-64 rounded-2xl object-cover mx-auto md:mx-0" src="{{ member.image }}" alt="{{ member.name }}"/>
</div>
<div class="team-modal-body flex-1 min-w-0">
<h2 id="team-modal-title" class="text-white text-2xl md:text-3xl font-black tracking-tight mb-1">{{ member.name }}</h2>
<p class="text-primary font-bold text-sm uppercase tracking-widest mb-6">{{ member.role }}</p>
{% if member.qualifications %}
<h3 class="team-modal-heading text-white text-xs font-bold uppercase tracking-widest mb-3">Professional qualifications</h3>
<ul class="team-modal-list text-gray-400 text-sm leading-relaxed mb-8">
{% for q in member.qualifications %}
<li>{{ q }}</li>
{% endfor %}
</ul>
{% endif %}
{% if member.profile %}
<div class="team-modal-profile">
{% for para in member.profile %}
<p>{{ para }}</p>
{% endfor %}
</div>
{% else %}
<div class="team-modal-profile">{{ member.fullProfile }}</div>
{% endif %}
</div>
</div>
{% endfor %}
</div>
</div>
</div>

<script>
(function() {
    var modal = document.getElementById('team-modal');
    if (!modal) return;
    var panels = modal.querySelectorAll('.team-modal-panel');
    var backdrops = modal.querySelectorAll('[data-close-modal]');
    function openModal(index) {
        panels.forEach(function(p, i) { p.classList.toggle('hidden', i !== index); });
        modal.classList.remove('hidden');
        modal.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
    }
    function closeModal() {
        modal.classList.add('hidden');
        modal.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
    }
    document.querySelectorAll('.team-card-wrapper').forEach(function(wrapper) {
        var index = parseInt(wrapper.getAttribute('data-member-index'), 10);
        wrapper.addEventListener('click', function() { openModal(index); });
        wrapper.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); openModal(index); }
        });
    });
    backdrops.forEach(function(el) { el.addEventListener('click', closeModal); });
    modal.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeModal();
    });
})();
</script>

