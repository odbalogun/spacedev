<!-- Right: Contact Form -->
<div class="lg:col-span-7">
<div id="contact-success" class="hidden mb-6 p-4 rounded-lg bg-primary/20 border border-primary/40 text-primary font-medium" role="alert">Thanks! Your message was sent. Weâ€™ll get back within 24 hours.</div>
<div id="contact-error" class="hidden mb-6 p-4 rounded-lg bg-red-500/20 border border-red-500/40 text-red-400 font-medium" role="alert">Something went wrong. Please try again or email us directly.</div>
<div class="bg-white/5 p-8 md:p-10 rounded-2xl border border-white/10 shadow-xl relative overflow-hidden">
<div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-full -mr-16 -mt-16 blur-3xl"></div>
<form class="space-y-6 relative z-10" action="{{ site.formEndpoint }}" method="post">
<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
<div class="flex flex-col gap-2">
<label class="text-sm font-medium text-white" for="contact-name">Full Name</label>
<input id="contact-name" name="name" class="bg-background-dark/50 border border-white/10 rounded-lg py-3 px-4 text-white placeholder:text-gray-500 focus:ring-1 focus:ring-primary focus:border-primary focus:outline-none glow-focus" placeholder="John Doe" type="text"/>
</div>
<div class="flex flex-col gap-2">
<label class="text-sm font-medium text-white" for="contact-email">Email Address</label>
<input id="contact-email" name="email" class="bg-background-dark/50 border border-white/10 rounded-lg py-3 px-4 text-white placeholder:text-gray-500 focus:ring-1 focus:ring-primary focus:border-primary focus:outline-none glow-focus" placeholder="john@company.com" type="email"/>
</div>
</div>
<div class="flex flex-col gap-2">
<label class="text-sm font-medium text-white" for="contact-project">Project Type</label>
<select id="contact-project" name="project_type" class="bg-background-dark/50 border border-white/10 rounded-lg py-3 px-4 text-white focus:ring-1 focus:ring-primary focus:border-primary focus:outline-none glow-focus appearance-none">
<option value="commercial">Commercial Construction</option>
<option value="industrial">Industrial Infrastructure</option>
<option value="residential">Residential Development</option>
<option value="consulting">Consulting</option>
<option value="other">Other</option>
</select>
</div>
<div class="flex flex-col gap-2">
<label class="text-sm font-medium text-white" for="contact-message">Your Message</label>
<textarea id="contact-message" name="message" class="bg-background-dark/50 border border-white/10 rounded-lg py-3 px-4 text-white placeholder:text-gray-500 focus:ring-1 focus:ring-primary focus:border-primary focus:outline-none glow-focus resize-none" placeholder="Tell us about your project goals..." rows="5"></textarea>
</div>
<div class="pt-2">
<button class="w-full bg-primary hover:bg-primary/90 text-background-dark font-bold py-4 rounded-lg shadow-lg shadow-primary/20 transition-all flex items-center justify-center gap-2 group" type="submit">
<span>Send Message</span>
<span class="material-symbols-outlined text-xl group-hover:translate-x-1 transition-transform">send</span>
</button>
<p class="text-center mt-4 text-xs text-gray-500">Typical response time: <span class="text-primary font-medium">under 24 hours</span></p>
</div>
</form>
</div>
</div>
</div>
</section>
<script>
(function () {
  var params = new URLSearchParams(window.location.search);
  var success = document.getElementById('contact-success');
  var err = document.getElementById('contact-error');
  if (params.get('sent') === '1' && success) success.classList.remove('hidden');
  if (params.get('error') === '1' && err) err.classList.remove('hidden');
})();
</script>
